\RequirePackage{anyfontsize}
\RequirePackage{inconsolata}

% fix for changed bullet when using the inconsolata package...
\renewcommand{\textbullet}{$\bullet$}

\renewcommand*{\familydefault}{\sfdefault}

\AtBeginDocument{\fontsize{16}{20}\selectfont}
\setbeamerfont{normal text}{size=\fontsize{16}{20}}

\setbeamerfont{title}{series=\bfseries,size=\fontsize{34}{40}}
\setbeamerfont{subtitle}{series=\normalfont,size=\fontsize{28}{34}}
\setbeamerfont{info}{series=\normalfont,size=\fontsize{16}{20}}

\setbeamerfont{frametitle}{series=\bfseries,size=\fontsize{24}{28}}
\setbeamerfont{framesubtitle}{series=\normalfont,size=\fontsize{16}{20}}

\setbeamerfont{footer}{series=\normalfont,size=\fontsize{8}{10}}

\setbeamerfont{footline}{size=\fontsize{10}{12}}
\setbeamerfont{footnote}{size=\fontsize{12}{14}}

\setbeamerfont{enumerate item}{size=\fontsize{16}{20}}
\setbeamerfont{enumerate subitem}{size=\fontsize{15}{19}}
\setbeamerfont{enumerate subsubitem}{size=\fontsize{14}{18}}

\setbeamerfont{itemize item}{size=\fontsize{16}{20}}
\setbeamerfont{itemize subitem}{size=\fontsize{15}{19}}
\setbeamerfont{itemize subsubitem}{size=\fontsize{14}{18}}

\setbeamerfont{itemize/enumerate body}{size=\fontsize{16}{20}}
\setbeamerfont{itemize/enumerate subbody}{size=\fontsize{15}{19}}
\setbeamerfont{itemize/enumerate subsubbody}{size=\fontsize{14}{18}}

\setbeamerfont{section in toc}{size=\fontsize{14}{20}}
\setbeamerfont{subsection in toc}{size=\fontsize{13}{19}}

\setbeamerfont{block title}{size=\fontsize{16}{20}}
