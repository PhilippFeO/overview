\RequirePackage{tikz}
\usetikzlibrary{calc, positioning, shadings}

\ifOptWide
  \RequirePackage[scaled=1.125]{helvet}

  \pgfdeclareimage[height=17.2mm]{fau_large}{\OptFAULogoLarge}
  \pgfdeclareimage[height=18.5mm]{fau_small}{_art/fau_blue.png}

  \ifx\OptLettering\empty
    \pgfdeclareimage[height=26.5mm]{fau_text}{_art/fau_text.png}
  \else
    \pgfdeclareimage[height=26.5mm]{fau_text}{\OptLettering}
  \fi

  \ifx\OptLogoLarge\empty\else
    \pgfdeclareimage[height=20.5mm]{logo_large}{\OptLogoLarge}
  \fi

  \ifx\OptLogoSmall\empty\else
    \pgfdeclareimage[height=6.2mm]{logo_small}{\OptLogoSmall}
  \fi
\else
  \RequirePackage{helvet}

  \pgfdeclareimage[height=14.9mm]{fau_large}{\OptFAULogoLarge}
  \pgfdeclareimage[height=12.6mm]{fau_small}{_art/fau_blue.png}

  \ifx\OptLettering\empty
    \pgfdeclareimage[height=26.1mm]{fau_text}{_art/fau_text.png}
  \else
    \pgfdeclareimage[height=26.1mm]{fau_text}{\OptLettering}
  \fi

  \ifx\OptLogoLarge\empty\else
    \pgfdeclareimage[height=15.1mm]{logo_large}{\OptLogoLarge}
  \fi

  \ifx\OptLogoSmall\empty\else
    \pgfdeclareimage[height=6.2mm]{logo_small}{\OptLogoSmall}
  \fi
\fi

